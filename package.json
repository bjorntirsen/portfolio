{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "update:data": "tsc update-data.ts --outDir dist && node dist/update-data.js",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/themes": "3.2.1",
    "@supabase/ssr": "0.8.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.563.0",
    "next": "16.1.4",
    "next-themes": "0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animated": "2.0.0"
  },
  "devDependencies": {
    "@supabase/supabase-js": "2.91.1",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/node": "24.10.9",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.18",
    "babel-plugin-react-compiler": "^1.0.0",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "husky": "^9.1.7",
    "jsdom": "27.4.0",
    "lint-staged": "^16.2.6",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "@types/react": "19.2.9",
      "@types/react-dom": "19.2.3"
    }
  },
  "engines": {
    "node": "24.x"
  },
  "packageManager": "pnpm@10.28.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
