{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automergeType": "pr",
  "requiredStatusChecks": ["test", "lint", "typecheck"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "schedule": ["0 9 * * *"],
  "prHourlyLimit": 4,
  "stabilityDays": 3,
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  }
}
